.stats
  .center
    h3.no-marg
      img.flag.size-32(ng-show="stats.redCountry", ng-src="/img/flags/32/{{stats.redCountry}}.png")
      span.redname {{stats.redname}}
      |  {{scoreComparison}} 
      img.flag.size-32(ng-show="stats.bluCountry", ng-src="/img/flags/32/{{stats.bluCountry}}.png")
      span.bluname {{stats.bluname}}
      |  {{redScore}} - {{bluScore}}
    .stats-description {{stats.created | date:'M/d/yy h:mma' | lowercase}} // {{secondsToHMS(playableTime)}} // {{stats.map}} 
      span.label(ng-show='stats.isLive') Live
    //- .asdf {{stats.hostname}}
    //- .servername Server: {{stats.hostname}}
    //- .mapname Map: {{stats.map}}
    //- .date Date: {{stats.created | date:'medium'}}
    //- .match-duration(ng-show='stats.matchDuration') Match Duration: {{secondsToHMS(stats.matchDuration)}}
    //- .playable-time Playable Time: {{secondsToHMS(playableTime)}}
    table.score-table
      thead
        tr
          th
          th.score-table-round-header(ng-repeat='n in stats.redscore', ng-click='clickRoundHeader($index)', ng-class='{"deselected-round":selectedRounds.indexOf($index)==-1}')
            acronym R{{$index + 1}}
          th(title='Total Score', class='has-tip tip-top'): abbr T
          th(title='Total Damage', class='has-tip tip-top'): abbr DMG
          th(title='Total Frags', class='has-tip tip-top'): abbr F
          th(title='Midfights Won', class='has-tip tip-top'): abbr MF
      tbody
        tr(ng-bind-html-unsafe='redtr')
        tr(ng-bind-html-unsafe='blutr')
  .overall-stats
    stats-table(data='overallStatsTableData', split-teams='')
  .class-stats
    stats-table(data='medicStatsTableData', filter='classFilter(6)', ng-show='hasBeenPlayed(6)')
    stats-table(data='sniperStatsTableData', filter='classFilter(7)', ng-show='hasBeenPlayed(7)')
    stats-table(data='spyStatsTableData', filter='classFilter(8)', ng-show='hasBeenPlayed(8)')
  .chat-log
    ul
      li(ng-repeat='chat in stats.chats | filter:bindFilter')
        span.chat-time {{secondsToHMS(chat.time)}}&nbsp;
        span.chat-name(ng-class='{true:"team-message"}[chat.isTeam]', class='team{{players[chat.steamid].team}}')
          b {{players[chat.steamid].name || "spectator"}}
        span.chat-message : {{chat.message}}
    dl.sub-nav.no-marg
      dd(ng-class='{active:!filterBinds}')
        a(href="javascript:", ng-click="filterBinds=false") All
      dd(ng-class='{active:filterBinds}')
        a(href="javascript:", ng-click="filterBinds=true") No Binds
